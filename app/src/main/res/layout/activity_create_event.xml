<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </LinearLayout>

    <TextView
        android:id="@+id/titlenameTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/titlename"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:text="Event" />

    <EditText
        android:id="@+id/titlename"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/location"
        android:layout_marginTop="110dp"
        android:hint="Tom's Birthday Party"
        android:inputType="textEmailAddress"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/LocationTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/location"
        android:layout_alignEnd="@+id/titlenameTag"
        android:text="Location" />

    <AutoCompleteTextView
        android:id="@+id/location"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:hint="TT16, 2.201"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:text=""
        android:textSize="14dp">


    </AutoCompleteTextView>

    <TextView
        android:id="@+id/DateTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignEnd="@+id/titlenameTag"
        android:text="Date" />

    <!--  <Spinner
          android:id="@+id/date"
          android:layout_width="73dp"
          android:layout_height="27dp"
          android:layout_alignStart="@+id/titlenameTag"
          android:layout_below="@+id/DateTag"
          android:layout_x="11dp"
          android:layout_y="118dp"
          android:tooltipText="Location" />

      <Spinner
          android:id="@+id/month"
          android:layout_width="96dp"
          android:layout_height="27dp"
          android:layout_alignTop="@+id/date"
          android:layout_centerHorizontal="true"
          android:layout_x="11dp"
          android:layout_y="118dp"
          android:tooltipText="Location" />


      <Spinner
          android:id="@+id/year"
          android:layout_width="73dp"
          android:layout_height="27dp"
          android:layout_alignEnd="@+id/location"
          android:layout_alignTop="@+id/date"
          android:layout_x="11dp"
          android:layout_y="118dp"
          android:tooltipText="Location" />-->

    <AutoCompleteTextView
        android:id="@+id/date"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/titlename"
        android:layout_marginTop="210dp"
        android:layout_x="11dp"
        android:layout_y="118dp"
        android:ems="10"
        android:hint="1"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:text=""
        android:textSize="14dp">

    </AutoCompleteTextView>

    <AutoCompleteTextView
        android:id="@+id/month"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date"
        android:layout_toStartOf="@+id/timeEnd"
        android:layout_x="11dp"
        android:layout_y="118dp"
        android:ems="10"
        android:hint="Dec"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:text=""
        android:textSize="14dp">


    </AutoCompleteTextView>

    <AutoCompleteTextView
        android:id="@+id/year"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/location"
        android:layout_alignTop="@+id/date"
        android:layout_x="11dp"
        android:layout_y="118dp"
        android:ems="10"
        android:hint="2020"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:text=""
        android:textSize="14dp">


    </AutoCompleteTextView>

    <TextView
        android:id="@+id/TimeTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timeStart"
        android:layout_alignEnd="@+id/titlenameTag"
        android:text="Time" />

    <!-- <Spinner
         android:id="@+id/timeStart"
         android:layout_width="121dp"
         android:layout_height="27dp"
         android:layout_alignStart="@+id/titlenameTag"
         android:layout_centerVertical="true"
         android:layout_x="11dp"
         android:layout_y="118dp"
         android:tooltipText="Location" />  -->

    <AutoCompleteTextView
        android:id="@+id/timeStart"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/titlename"
        android:layout_marginTop="260dp"
        android:hint="0000"
        android:layout_x="11dp"
        android:layout_y="118dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:text=""
        android:textSize="14dp">

    </AutoCompleteTextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/TimeTag"
        android:layout_marginEnd="171dp"
        android:text="to" />

    <!--   <Spinner
           android:id="@+id/timeEnd"
           android:layout_width="122dp"
           android:layout_height="27dp"
           android:layout_alignEnd="@+id/location"
           android:layout_alignTop="@+id/timeStart"
           android:layout_x="11dp"
           android:layout_y="118dp"
           android:tooltipText="Location" />  -->

    <AutoCompleteTextView
        android:id="@+id/timeEnd"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/location"
        android:layout_alignTop="@+id/timeStart"
        android:hint="0030"
        android:layout_x="11dp"
        android:layout_y="118dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:text=""
        android:textSize="14dp">


    </AutoCompleteTextView>


    <TextView
        android:id="@+id/detailsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/titlenameTag"
        android:layout_alignTop="@+id/details"
        android:text="Details" />

    <EditText
        android:id="@+id/details"
        android:layout_width="264dp"
        android:gravity="top"
        android:hint="Everyone is welcome! Bring snacks! ..."
        android:layout_height="200dp"
        android:padding="5dp"
        android:layout_alignStart="@+id/titlename"
        android:layout_marginTop="330dp"
        android:inputType="textMultiLine"
        android:background="@drawable/box"
        android:maxLines="8"
        android:textSize="14dp" />

    <Button
        android:id="@+id/create_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:text="Create Event"/>



</RelativeLayout>